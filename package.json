{
  "name": "gawain",
  "version": "1.0.1",
  "description": "React Autocomplete",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "assets/*.less",
    "es",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YagamiLight126/Gawain.git"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "postinstall": "husky install",
    "rx:mock": "node ./examples/mock/server.js",
    "test": "jest",
    "coverage": "jest && open ./coverage/lcov-report/index.html",
    "build:esm": "rm -rf es && tsc --module es2015 --outDir es --declarationDir es",
    "build:cjs": "rm -rf lib && tsc --module CommonJS --outDir lib --declarationDir lib",
    "build": "npm run build:esm && npm run build:cjs",
    "start": "start-storybook -p 1231",
    "lint": "npm run lint:script  && npm run lint:style",
    "lint:script": "eslint . --ext '.js,.jsx,.ts,.tsx'",
    "lint:style": "prettier --write src/**",
    "prepare": "husky install"
  },
  "author": "FuZhiCheng",
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "rxjs": "^7.5.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.14",
    "@storybook/addon-essentials": "^6.4.14",
    "@storybook/addon-links": "^6.4.14",
    "@storybook/react": "^6.4.14",
    "@testing-library/react": "^12.1.2",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-alloy": "^3.10.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "json-server": "^0.16.3",
    "less": "^4.1.0",
    "less-loader": "^7.3.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.3.0",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "eslint --fix",
    "*.{js,css,md,ts,tsx}": "prettier --write",
    "*.js": "eslint --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
